<% include ../partials/header %>

</head>
<body>

<% include ../partials/navbar %>


<div class="container-fluid">

<!-- Categories -->
  <div class="row justify-content-md-center mt-3">
    <div class='mx-1'>
      <a href="/recipes/categories/chicken" class='category-container'>
        <img src="/public/img/categories/chicken.jpg" alt="Chicken" class="rounded-circle category-circle">
        <div class="category-overlay">
          <div class="category-text">Chicken</div>
        </div>
      </a>
    </div>
    <div class='mx-1'>
      <a href="/recipes/categories/beef" class='category-container'>
        <img src="/public/img/categories/beef.jpg" alt="Beef" class="rounded-circle category-circle">
        <div class="category-overlay">
          <div class="category-text">Beef</div>
        </div>
      </a>
    </div>
    <div class='mx-1'>
      <a href="/recipes/categories/pork" class='category-container'>
        <img src="/public/img/categories/pork.jpg" alt="Pork" class="rounded-circle category-circle">
        <div class="category-overlay">
          <div class="category-text">Pork</div>
        </div>
      </a>
    </div>
    <div class='mx-1'>
      <a href="/recipes/categories/fish" class='category-container'>
        <img src="/public/img/categories/fish.jpg" alt="Fish" class="rounded-circle category-circle">
        <div class="category-overlay">
          <div class="category-text">Fish</div>
        </div>
      </a>
    </div>
    <div class='mx-1'>
      <a href="/recipes/categories/other" class='category-container'>
        <img src="/public/img/categories/other.jpg" alt="Other" class="rounded-circle category-circle">
        <div class="category-overlay">
          <div class="category-text">Other</div>
        </div>
      </a>
    </div>
    <div class='mx-1'>
      <a href="/recipes/categories/none" class='category-container'>
        <img src="/public/img/categories/none.jpg" alt="No Protein" class="rounded-circle category-circle">
        <div class="category-overlay">
          <div class="category-text">None</div>
        </div>
      </a>
    </div>
  </div>

  <hr />

<!-- Recipe Index -->
  <div class="container">
    <div class="row">
      <% recipes.forEach((recipe) => { %>
        <div class="col-md-4 margin-bottom">
          <div class="card mb-4 h-100">
            <a href="/recipes/<%= recipe._id %>">
              <img class="card-img-top" src="<%= recipe.imageUrl %>" alt="<%= recipe.recipeName %>">
            </a>
            <div class="card-body d-flex flex-column">
              <h5 class="card-title"><%= recipe.recipeName %></h5>
              <p class="card-text preserve-whitespace"><%= recipe.description || "There is no description for this recipe, but I'm sure it's delicious!" %></p>
              <a href="/recipes/<%= recipe._id %>" class="btn btn-primary mt-auto">View Recipe</a>
            </div>
          </div>
        </div>
      <% }); %>
    </div>
    <% if (recipes.length < 1) { %>
      <div class="row justify-content-md-center">
        No more recipes :-(
      </div>
    <% } %>
  </div>
  <% include ../partials/toggleWindow %>
</div>



<% include ../partials/footer %>
