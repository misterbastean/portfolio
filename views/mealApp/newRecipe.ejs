</head>
<body>

<% include partials/navbar %>

<div class="container">
  <h1>Create New Recipe</h1>
  <br>
  <form action="/mealapp/recipes" method="POST">
    <div class="form-group">
      <label for="recipeName">Recipe Name</label>
      <input type="text" class="form-control" id='recipeName' name='recipeName' placeholder="e.g. The Meat Tornado" autofocus>
    </div>
    <div class="form-group">
      <label for="description">Description</label>
      <textarea class='form-control' name="description" id="description" cols="30" rows="4" placeholder="e.g. A hearty meal made of meat, meat, and more meat. Ron Swanson would approve.   : {"></textarea>
    </div>
    <div class="row">
      <div class="col-md-3">
        <label for="protein">Protein</label>
        <select name="protein" id="protein" class='form-control'>
          <option value="chicken">Chicken</option>
          <option value="beef">Beef</option>
          <option value="pork">Pork</option>
          <option value="fish">Fish</option>
          <option value="other">Other</option>
          <option value="none">None</option>
        </select>
      </div>
      <div class="col-md-3">
        <label for="servingNumber">Serves How Many?</label>
        <input type="number" class="form-control" id="servingNumber" name="servingNumber" placeholder="e.g. 4">
      </div>
      <div class="col-md-3">
        <label for="prepMinutes">Prep Time (in minutes)</label>
        <input type="number" class="form-control" id="prepMinutes" name="prepMinutes" placeholder="e.g. 15">
      </div>
      <div class="col-md-3">
        <label for="cookMinutes">Cook Time (in minutes)</label>
        <input type="number" class="form-control" id="cookMinutes" name="cookMinutes" placeholder="e.g. 90">
      </div>
    </div>
    <h3 class="mt-5 mb-3">Ingredients</h3>
    <div class="btn btn-success btn-block btn-sm" id='addIngredientButton'>Add Ingredient Field</div>
    <br>

    <div id="ingredients-container">

      <!-- Single Ingredient -->
      <div class="row">
        <div class="col-md-7">
          <input name='ingredients[1][ingredientName]' type="text" class='form-control' placeholder='e.g. Cinnamon'>
        </div>
        <div class="col-md-2">
          <input name='ingredients[1][ingredientQuantity]' type="number" class="form-control" placeholder='#'>
        </div>
        <div class="col-md-2">
          <select name='ingredients[1][ingredientUnit]' class="form-control" placeholder='unit'>
            <optgroup label='Volume'>
              <option value="teaspoons">Teaspoon(s)</option>
              <option value="tablespoons">Tablespoon(s)</option>
              <option value="fluidOunces">Fluid Ounce(s)</option>
              <option value="cups">Cup(s)</option>
              <option value="pints">Pint(s)</option>
              <option value="quarts">Quart(s)</option>
              <option value="gallons">Gallons(s)</option>
            </optgroup>
            <optgroup label='Weight'>
              <option value="grams">Gram(s)</option>
              <option value="ounces">Ounce(s)</option>
              <option value="pounds">Pound(s)</option>
            </optgroup>
            <optgroup label="Misc.">
              <option value="each">Each</option>
              <option value="cans">Can(s)</option>
              <option value="packages">Package(s)</option>
              <option value="pinch">Pinch(es)</option>
              <option value="to taste">To Taste</option>
            </optgroup>
          </select>
        </div>
        <div class="col-md-1">
          <div class='btn btn-danger btn-small deleteIngredientButton' id='deleteIngredient1'>X</div>
        </div>
      </div>
      <!-- / Single Ingredient -->

    </div>
    <br>
    <div class="form-group">
      <label for="directions">Directions</label>
      <textarea class='form-control' name="directions" id="directions" cols="30" rows="10" placeholder='e.g. Mix together...'></textarea>
    </div>
    <div class="form-group">
      <label for="imageUrl">Image URL (optional)</label>
      <input type="text" class="form-control" name='imageUrl' placeholder='https://'>
    </div>
    <button class="btn btn-primary btn-block btn-lg">Submit</button>
  </form>
</div>
<br>
<br>

<script src="../public/js/mealApp/newRecipe.js"></script>


