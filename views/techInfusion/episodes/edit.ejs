<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center">Edit <%= episode.name %></h1>
        <div style="width: 30%; margin:25px auto">
            <form action="/episode/<%=episode._id%>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="episode[name]" value="<%= episode.name %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" name="episode[price]" value="<%= episode.price %>" min="0.01" step = "0.01">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="episode[image]" value="<%= episode.image %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="episode[description]" value="<%= episode.description %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-lg btn-default btn-block">Submit!</button>
                </div>
            </form>
            <a href="/episode">Go Back</a>
        </div>
        
    </div>
</div>
<% include ../partials/footer %>